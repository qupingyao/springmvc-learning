    <servlet>
        <servlet-name>myservlet1</servlet-name>
        <servlet-class>com.yqp.web.servlet.MyServlet1</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>myservlet1</servlet-name>
        <url-pattern>/servlet/1</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>myservlet2</servlet-name>
        <servlet-class>com.yqp.web.servlet.MyServlet2</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>myservlet2</servlet-name>
        <url-pattern>/servlet/2</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>myhttpservlet1</servlet-name>
        <servlet-class>com.yqp.web.servlet.http.MyHttpServlet1</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>myhttpservlet1</servlet-name>
        <url-pattern>/httpservlet/1</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>myhttpservlet2</servlet-name>
        <servlet-class>com.yqp.web.servlet.http.MyHttpServlet2</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>myhttpservlet2</servlet-name>
        <url-pattern>/httpservlet/2</url-pattern>
    </servlet-mapping>


</web-app>